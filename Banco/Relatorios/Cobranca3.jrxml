	<parameter name="mensalidadeID" class="java.lang.Long"/>
	<queryString language="SQL">
		<![CDATA[SELECT distinct a.MAIORDEIDADE, a.NUMEROPARCELA, a.VALOREXTENSO, d.NOME as NOMEALUNO, cast(b.VALORAULAS as decimal(10,2)) AS VALOR, EXTRACT(DAY FROM a.DATA) AS DIAAVISO, 
decode(EXTRACT(MONTH FROM a.DATA),
                1, 'janeiro',
                2, 'fevereiro',
                3, 'março',
                4, 'abril',
                5, 'maio',
                6, 'junho',
                7, 'julho',
                8, 'agosto',
                9, 'setembro',
                10, 'outubro',
                11, 'novembro',
                12, 'dezembro',
                'Unknown') AS MESAVISO,
EXTRACT(YEAR FROM a.DATA) AS ANOAVISO,
decode(b.MESVENCTO,
        1, 'janeiro',
        2, 'fevereiro',
        3, 'março',
        4, 'abril',
        5, 'maio',
        6, 'junho',
        7, 'julho',
        8, 'agosto',
        9, 'setembro',
        10, 'outubro',
        11, 'novembro',
        12, 'dezembro',
        'Unknown') AS MESVENCTO, b.ANOVENCTO, e.NOME as RESPNOME,
EXTRACT(DAY FROM a.DATACOMPARECIMENTO) AS DIACOMPARECIMENTO, EXTRACT(YEAR FROM a.DATACOMPARECIMENTO) AS ANOCOMPARECIMENTO,
decode(EXTRACT(MONTH FROM a.DATACOMPARECIMENTO),
                1, 'janeiro',
                2, 'fevereiro',
                3, 'março',
                4, 'abril',
                5, 'maio',
                6, 'junho',
                7, 'julho',
                8, 'agosto',
                9, 'setembro',
                10, 'outubro',
                11, 'novembro',
                12, 'dezembro',
                'Unknown') AS MESCOMPARECIMENTO
FROM COBRANCA a, MENSALIDADE b, MATRICULA c, aluno d
left join RESPONSAVEL e on d.ID = e.ALUNO_ID
WHERE a.MENSALIDADE_ID = b.ID 
AND b.ALUNO_ID = c.ALUNO_ID
AND b.NIVEL_ID = c.NIVEL_ID
AND c.ALUNO_ID = d.ID
AND a.NUMERO = 3
AND a.MENSALIDADE_ID = $P{mensalidadeID}]]>
	</queryString>
